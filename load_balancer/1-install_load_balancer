# /etc/haproxy/haproxy.cfg
#---------------------------------------------------------------------
# Global settings
#---------------------------------------------------------------------
global
    log /dev/log local0
    log /dev/log local1 notice
    chroot /var/lib/haproxy
    stats socket /run/haproxy/admin.sock mode 660 level admin expose-fd listeners
    stats timeout 30s
    user haproxy
    group haproxy
    daemon
    # tune limits
    maxconn 2000

#---------------------------------------------------------------------
# Default settings for all proxies
#---------------------------------------------------------------------
defaults
    log     global
    mode    http
    option  httplog
    option  dontlognull
    timeout connect 5000ms
    timeout client  50000ms
    timeout server  50000ms
    errorfile 400 /etc/haproxy/errors/400.http
    errorfile 403 /etc/haproxy/errors/403.http
    errorfile 408 /etc/haproxy/errors/408.http
    errorfile 500 /etc/haproxy/errors/500.http
    errorfile 502 /etc/haproxy/errors/502.http
    errorfile 503 /etc/haproxy/errors/503.http
    errorfile 504 /etc/haproxy/errors/504.http

#---------------------------------------------------------------------
# Frontend
#---------------------------------------------------------------------
frontend http-in
    bind *:80
    mode http
    default_backend lb-backend

    # Set X-Served-By header once (optional)
    http-request set-header X-Served-By 6914-lb-01

#---------------------------------------------------------------------
# Backend
#---------------------------------------------------------------------
backend lb-backend
    mode http
    balance roundrobin
    option httpchk GET /    # optional health check
    server 6914-web-01 44.202.121.92:80 check
    server 6914-web-02 44.204.148.231:80 check

#---------------------------------------------------------------------
# Stats (optional, for monitoring)
#---------------------------------------------------------------------
listen stats
    bind *:8080
    stats enable
    stats uri /stats
    stats refresh 10s
    stats auth admin:password   # change password
